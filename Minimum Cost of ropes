class Solution {
    public static int minCost(int[] arr) {
        // code here
        PriorityQueue<Integer> pq =new PriorityQueue<>();
        for(int num : arr){
            pq.add(num);
        }
        int cost = 0;
        
        while(pq.size()>1){
            int x = pq.poll();
            int y =pq.poll();
            int temp = x+y;
            cost += temp;
            pq.add(temp);
        }
        return cost;
    }
}
